{
  "name": "anrp-platform",
  "version": "1.0.0",
  "description": "Plateforme de suivi-évaluation pour l'Agence Nigérienne de Régulation Pharmaceutique",
  "private": true,
  "author": {
    "name": "ANRP Niger",
    "email": "contact@anrp.ne"
  },
  "license": "MIT",
  "keywords": [
    "anrp",
    "niger",
    "pharmaceutical",
    "monitoring",
    "evaluation",
    "nextjs"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out",
    "prepare": "husky install",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "immer": "^10.0.3",
    "lucide-react": "^0.263.1",
    "next": "15.5.0",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0",
    "typescript": "^5",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.0",
    "@tailwindcss/forms": "^0.5.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anrp-niger/platform-se.git"
  },
  "bugs": {
    "url": "https://github.com/anrp-niger/platform-se/issues"
  },
  "homepage": "https://anrp-platform.vercel.app"
}
